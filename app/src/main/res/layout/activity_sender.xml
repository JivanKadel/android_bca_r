<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.SenderActivity">

    <TextView
        android:id="@+id/tvNumberToSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input a number"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNumberToSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:background="@drawable/edit_text_border"
        app:layout_constraintTop_toBottomOf="@id/tvNumberToSend" />

    <TextView
        android:id="@+id/tvReceivedBackNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etNumberToSend"
        app:layout_constraintStart_toStartOf="parent"
        />


    <Button
        android:id="@+id/btnSendNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReceivedBackNumber" />


</androidx.constraintlayout.widget.ConstraintLayout>